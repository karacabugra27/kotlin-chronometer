<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/shortcut"
        android:roundIcon="@drawable/shortcut"
        android:supportsRtl="true"
        android:theme="@style/MainPage"
        android:label="ChronoCount"
        android:screenOrientation="portrait"
        tools:targetApi="31">
        <activity
            android:name=".ChronometerActivity"
            android:exported="true"
            android:theme="@style/ChronometerPage"
            android:label="CHRONOMETER"></activity>
        <activity
            android:name=".SayacActivity"
            android:exported="true"
            android:theme="@style/SayacPage"
            android:label="COUNTDOWN TIMER"></activity>
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/MainPage"></activity>
        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:theme="@style/SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
</manifest>